<%= form_with model: [resume, work_experience], class: "space-y-4", data: { turbo_frame: "_top" } do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= f.label :title, t("activerecord.attributes.work_experience.title"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= f.text_field :title, class: "mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:border-job-blue" %>
    </div>

    <div>
      <%= f.label :company, t("activerecord.attributes.work_experience.company"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= f.text_field :company, class: "mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:border-job-blue" %>
    </div>

    <div>
      <%= f.label :starting_month, t("activerecord.attributes.work_experience.starting_month"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <div class="grid grid-cols-2 gap-2">
        <%= f.select :starting_month, options_for_select((1..12).map { |m| [t("date.month_names")[m], m] }, work_experience.starting_month), { include_blank: t("helpers.select.prompt") }, class: "mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:border-job-blue" %>
        <%= f.select :starting_year, options_for_select((1970..Date.current.year).to_a.reverse, work_experience.starting_year), { include_blank: t("helpers.select.prompt") }, class: "mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:border-job-blue" %>
      </div>
    </div>

    <div>
      <%= f.label :ending_month, t("activerecord.attributes.work_experience.ending_month"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <div class="grid grid-cols-2 gap-2">
        <%= f.select :ending_month, options_for_select((1..12).map { |m| [t("date.month_names")[m], m] }, work_experience.ending_month), { include_blank: t("helpers.select.prompt") }, class: "mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:border-job-blue" %>
        <%= f.select :ending_year, options_for_select((1970..Date.current.year).to_a.reverse, work_experience.ending_year), { include_blank: t("helpers.select.prompt") }, class: "mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:border-job-blue" %>
      </div>
    </div>
  </div>

  <div>
    <%= f.label :description, t("activerecord.attributes.work_experience.description"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= f.text_area :description, rows: 3, class: "mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:border-job-blue" %>
  </div>

  <div class="flex items-center space-x-2">
    <%= f.check_box :is_current, class: "border-gray-300 dark:border-gray-600 text-job-blue focus:ring-job-blue" %>
    <%= f.label :is_current, t("activerecord.attributes.work_experience.is_current"), class: "text-sm text-gray-700 dark:text-gray-300 cursor-pointer" %>
  </div>

  <div class="flex justify-end space-x-3 pt-4">
    <button type="button" data-action="click->modal#close" class="px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
      <%= t("actions.cancel") %>
    </button>
    <%= f.submit t("actions.save"), class: "px-4 py-2 bg-job-blue hover:bg-job-blue-dark text-white font-medium transition-colors cursor-pointer" %>
  </div>
<% end %>
