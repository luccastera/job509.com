<div class="max-w-3xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-8"><%= t("pages.contact.title") %></h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div class="border border-gray-200 dark:border-gray-800 p-8">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4"><%= t("pages.contact.get_in_touch") %></h2>
      <p class="text-gray-600 dark:text-gray-400 mb-6"><%= t("pages.contact.intro") %></p>

      <div class="space-y-4">
        <div>
          <h3 class="font-semibold text-gray-900 dark:text-white"><%= t("pages.contact.email") %></h3>
          <p class="text-job-blue dark:text-job-blue-light">contact@job509.com</p>
        </div>

        <div>
          <h3 class="font-semibold text-gray-900 dark:text-white"><%= t("pages.contact.phone") %></h3>
          <p class="text-gray-600 dark:text-gray-400">+509 XXXX XXXX</p>
        </div>

        <div>
          <h3 class="font-semibold text-gray-900 dark:text-white"><%= t("pages.contact.address") %></h3>
          <p class="text-gray-600 dark:text-gray-400">Port-au-Prince, Haiti</p>
        </div>
      </div>
    </div>

    <div class="border border-gray-200 dark:border-gray-800 p-8">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-4"><%= t("pages.contact.office_hours") %></h2>
      <div class="space-y-2 text-gray-600 dark:text-gray-400">
        <p><strong class="text-gray-900 dark:text-white"><%= t("pages.contact.weekdays") %>:</strong> 8:00 AM - 5:00 PM</p>
        <p><strong class="text-gray-900 dark:text-white"><%= t("pages.contact.saturday") %>:</strong> 9:00 AM - 1:00 PM</p>
        <p><strong class="text-gray-900 dark:text-white"><%= t("pages.contact.sunday") %>:</strong> <%= t("pages.contact.closed") %></p>
      </div>
    </div>
  </div>
</div>
