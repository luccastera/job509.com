<div class="flex justify-between items-center border-b border-gray-100 pb-2 mb-2" id="<%= dom_id(language_skill) %>">
  <div>
    <span class="font-medium"><%= language_skill.language.name %></span>
    <span class="text-sm text-gray-600 ml-2">
      <%= t("resume.speaking") %>: <%= t("resume.levels.#{language_skill.speaking_level}") %>,
      <%= t("resume.writing") %>: <%= t("resume.levels.#{language_skill.writing_level}") %>
    </span>
  </div>
  <%= button_to resume_language_skill_path(language_skill),
                method: :delete,
                class: "text-red-600 hover:text-red-800 text-sm",
                data: { turbo_confirm: t("helpers.confirm") } do %>
    <%= t("helpers.submit.delete") %>
  <% end %>
</div>
