<%= form_with model: [resume, language_skill], class: "space-y-4", data: { turbo_frame: "_top" } do |f| %>
  <div>
    <%= f.label :language_id, t("resume.languages"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= f.collection_select :language_id, Language.all, :id, :name, { include_blank: t("helpers.select.prompt") }, class: "mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:border-job-blue" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= f.label :speaking_level, t("activerecord.attributes.language_skill.speaking_level"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= f.select :speaking_level, options_for_select([[t("resume.levels.basic"), "basic"], [t("resume.levels.intermediate"), "intermediate"], [t("resume.levels.fluent"), "fluent"]], language_skill.speaking_level), { include_blank: t("helpers.select.prompt") }, class: "mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:border-job-blue" %>
    </div>

    <div>
      <%= f.label :writing_level, t("activerecord.attributes.language_skill.writing_level"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= f.select :writing_level, options_for_select([[t("resume.levels.basic"), "basic"], [t("resume.levels.intermediate"), "intermediate"], [t("resume.levels.fluent"), "fluent"]], language_skill.writing_level), { include_blank: t("helpers.select.prompt") }, class: "mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:border-job-blue" %>
    </div>
  </div>

  <div class="flex justify-end space-x-3 pt-4">
    <button type="button" data-action="click->modal#close" class="px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
      <%= t("actions.cancel") %>
    </button>
    <%= f.submit t("actions.save"), class: "px-4 py-2 bg-job-blue hover:bg-job-blue-dark text-white font-medium transition-colors cursor-pointer" %>
  </div>
<% end %>
