<%= form_with model: [resume, skill], class: "space-y-4", data: { turbo_frame: "_top" } do |f| %>
  <div>
    <%= f.label :description, t("activerecord.attributes.skill.description"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= f.text_field :description, class: "mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:border-job-blue", placeholder: t("resume.add_skill") %>
  </div>

  <div class="flex justify-end space-x-3 pt-4">
    <button type="button" data-action="click->modal#close" class="px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
      <%= t("actions.cancel") %>
    </button>
    <%= f.submit t("actions.save"), class: "px-4 py-2 bg-job-blue hover:bg-job-blue-dark text-white font-medium transition-colors cursor-pointer" %>
  </div>
<% end %>
