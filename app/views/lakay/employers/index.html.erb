<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-800"><%= t("admin.employers") %></h1>
  <div class="text-sm text-gray-500">
    Total: <%= @total_count %> employers
  </div>
</div>

<%# Search %>
<div class="bg-white rounded-lg shadow p-4 mb-6">
  <%= form_with url: lakay_employers_path, method: :get, class: "flex gap-4" do |f| %>
    <div class="flex-1">
      <%= f.text_field :q, value: params[:q], placeholder: "Search by name, email, phone, company...", class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-job-blue focus:border-job-blue" %>
    </div>
    <%= f.submit t("actions.search"), class: "bg-job-blue hover:bg-job-blue-light text-white px-4 py-2 rounded-lg cursor-pointer" %>
  <% end %>
</div>

<%# Employers Table %>
<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Jobs Posted</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Registered</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @employers.each do |employer| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= link_to employer.full_name, lakay_employer_path(employer), class: "text-job-blue hover:underline font-medium" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= employer.email %><br>
            <%= employer.phone %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <span class="text-lg font-bold text-job-blue"><%= employer.jobs.count %></span>
            <span class="text-sm text-gray-500">
              (<%= employer.jobs.where(approved: true).count %> approved)
            </span>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= time_ago_in_words(employer.created_at) %> ago
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
            <%= link_to t("actions.view"), lakay_employer_path(employer), class: "text-job-blue hover:underline" %>
            <%= link_to "Jobs", lakay_jobs_path(user_id: employer.id), class: "text-gray-600 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @employers.empty? %>
    <div class="p-8 text-center text-gray-500">
      No employers found.
    </div>
  <% end %>
</div>

<%# Pagination %>
<div class="mt-6">
  <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>
