<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-800"><%= @employer.full_name %></h1>
  <%= link_to t("actions.back"), lakay_employers_path, class: "text-gray-600 hover:underline" %>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <%# Main Content - Jobs %>
  <div class="lg:col-span-2">
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-bold text-gray-800 mb-4">Posted Jobs (<%= @employer.jobs.count %>)</h2>

      <% if @employer.jobs.any? %>
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="text-left text-xs font-medium text-gray-500 uppercase pb-2">Title</th>
              <th class="text-left text-xs font-medium text-gray-500 uppercase pb-2">Status</th>
              <th class="text-left text-xs font-medium text-gray-500 uppercase pb-2">Apps</th>
              <th class="text-left text-xs font-medium text-gray-500 uppercase pb-2">Posted</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            <% @employer.jobs.order(created_at: :desc).each do |job| %>
              <tr>
                <td class="py-3">
                  <%= link_to job.title, [:lakay, job], class: "text-job-blue hover:underline" %>
                  <p class="text-sm text-gray-500"><%= job.company %></p>
                </td>
                <td class="py-3">
                  <% if job.expired? %>
                    <span class="px-2 py-0.5 rounded text-xs bg-gray-100 text-gray-800">Expired</span>
                  <% elsif job.approved? %>
                    <span class="px-2 py-0.5 rounded text-xs bg-green-100 text-green-800">Approved</span>
                  <% else %>
                    <span class="px-2 py-0.5 rounded text-xs bg-yellow-100 text-yellow-800">Pending</span>
                  <% end %>
                </td>
                <td class="py-3 text-sm text-gray-500">
                  <%= job.applics.count %>
                </td>
                <td class="py-3 text-sm text-gray-500">
                  <%= time_ago_in_words(job.created_at) %> ago
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-gray-500">No jobs posted yet.</p>
      <% end %>
    </div>
  </div>

  <%# Sidebar %>
  <div class="space-y-6">
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-bold text-gray-800 mb-4">Contact</h2>
      <dl class="space-y-3">
        <div>
          <dt class="text-sm text-gray-500">Email</dt>
          <dd class="font-medium"><%= @employer.email %></dd>
        </div>
        <div>
          <dt class="text-sm text-gray-500">Phone</dt>
          <dd class="font-medium"><%= @employer.phone || "-" %></dd>
        </div>
        <% if @employer.alternate_phone.present? %>
          <div>
            <dt class="text-sm text-gray-500">Alt. Phone</dt>
            <dd class="font-medium"><%= @employer.alternate_phone %></dd>
          </div>
        <% end %>
        <div>
          <dt class="text-sm text-gray-500">Registered</dt>
          <dd class="font-medium"><%= @employer.created_at.strftime("%B %d, %Y") %></dd>
        </div>
      </dl>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-bold text-gray-800 mb-4">Statistics</h2>
      <dl class="space-y-3">
        <div class="flex justify-between">
          <dt class="text-sm text-gray-500">Total Jobs</dt>
          <dd class="font-bold text-job-blue"><%= @employer.jobs.count %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-sm text-gray-500">Approved</dt>
          <dd class="font-bold text-green-600"><%= @employer.jobs.where(approved: true).count %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-sm text-gray-500">Pending</dt>
          <dd class="font-bold text-yellow-600"><%= @employer.jobs.where(approved: false).count %></dd>
        </div>
        <div class="flex justify-between">
          <dt class="text-sm text-gray-500">Total Applications</dt>
          <dd class="font-bold text-gray-800"><%= Applic.joins(:job).where(jobs: { user_id: @employer.id }).count %></dd>
        </div>
      </dl>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-lg font-bold text-gray-800 mb-4">Admin Notes</h2>
      <%= form_with model: @employer, url: lakay_employer_path(@employer), method: :patch do |f| %>
        <%= f.text_area :job509_comments, rows: 4, class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-job-blue focus:border-job-blue", placeholder: "Internal notes..." %>
        <%= f.submit "Save Notes", class: "mt-2 bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg cursor-pointer text-sm" %>
      <% end %>
    </div>
  </div>
</div>
