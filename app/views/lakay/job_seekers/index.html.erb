<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-800"><%= t("admin.job_seekers") %></h1>
  <div class="text-sm text-gray-500">
    Total: <%= @total_count %> job seekers
  </div>
</div>

<%# Search and Filters %>
<div class="bg-white rounded-lg shadow p-4 mb-6">
  <%= form_with url: lakay_job_seekers_path, method: :get, class: "flex flex-wrap gap-4" do |f| %>
    <div class="flex-1 min-w-[200px]">
      <%= f.text_field :q, value: params[:q], placeholder: "Search by name, email, phone...", class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-job-blue focus:border-job-blue" %>
    </div>
    <div class="w-48">
      <%= f.select :sector_id, options_from_collection_for_select(Sector.alphabetical, :id, :name, params[:sector_id]), { include_blank: "All Sectors" }, class: "w-full border-gray-300 rounded-lg shadow-sm" %>
    </div>
    <div class="w-32">
      <%= f.select :experience, options_for_select([["Any", ""], ["0-2 years", "0-2"], ["3-5 years", "3-5"], ["5+ years", "5+"]], params[:experience]), {}, class: "w-full border-gray-300 rounded-lg shadow-sm" %>
    </div>
    <div class="w-40">
      <%= f.select :recommended, options_for_select([["All", ""], ["Recommended", "yes"], ["Not Recommended", "no"]], params[:recommended]), {}, class: "w-full border-gray-300 rounded-lg shadow-sm" %>
    </div>
    <%= f.submit t("actions.search"), class: "bg-job-blue hover:bg-job-blue-light text-white px-4 py-2 rounded-lg cursor-pointer" %>
  <% end %>
</div>

<%# Job Seekers Table %>
<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Contact</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sector</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Experience</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Registered</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @job_seekers.each do |user| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap">
            <div class="flex items-center">
              <div>
                <%= link_to user.full_name, lakay_job_seeker_path(user), class: "text-job-blue hover:underline font-medium" %>
                <% if user.resume&.is_recommended %>
                  <span class="ml-2 px-2 py-0.5 rounded text-xs bg-green-100 text-green-800">Recommended</span>
                <% end %>
              </div>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= user.email %><br>
            <%= user.phone %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= user.resume&.sector&.name || "-" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= user.resume&.years_of_experience || "-" %> years
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= time_ago_in_words(user.created_at) %> ago
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
            <%= link_to t("actions.view"), lakay_job_seeker_path(user), class: "text-job-blue hover:underline" %>
            <% if user.resume %>
              <%= link_to "PDF", pdf_lakay_job_seeker_path(user, format: :pdf), class: "text-gray-600 hover:underline" %>
              <% if user.resume.is_recommended %>
                <%= button_to t("admin.unrecommend"), unrecommend_lakay_job_seeker_path(user), method: :patch, class: "text-yellow-600 hover:underline" %>
              <% else %>
                <%= button_to t("admin.recommend"), recommend_lakay_job_seeker_path(user), method: :patch, class: "text-green-600 hover:underline" %>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @job_seekers.empty? %>
    <div class="p-8 text-center text-gray-500">
      No job seekers found.
    </div>
  <% end %>
</div>

<%# Pagination %>
<div class="mt-6">
  <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>
