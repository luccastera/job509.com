<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Tag: <%= @tag.name %></h1>
  <div class="space-x-2">
    <%= link_to t("actions.edit"), edit_lakay_tag_path(@tag), class: "bg-job-blue hover:bg-job-blue-dark text-white px-4 py-2 font-medium transition-colors" %>
    <%= link_to t("actions.back"), lakay_tags_path, class: "border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 px-4 py-2 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors" %>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
  <div class="space-y-6">
    <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 p-6">
      <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Details</h2>

      <% if @tag.icon.attached? %>
        <div class="mb-4">
          <%= image_tag @tag.icon, class: "h-16 w-16 object-contain" %>
        </div>
      <% end %>

      <dl class="space-y-3">
        <div>
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Name</dt>
          <dd class="text-gray-900 dark:text-white"><%= @tag.name %></dd>
        </div>
        <% if @tag.description.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Description</dt>
            <dd class="text-gray-900 dark:text-white"><%= @tag.description %></dd>
          </div>
        <% end %>
        <% if @tag.event.present? %>
          <div>
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Event</dt>
            <dd><%= link_to @tag.event.name, lakay_event_path(@tag.event), class: "text-job-blue hover:underline" %></dd>
          </div>
        <% end %>
      </dl>
    </div>

    <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 p-6">
      <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Add User</h2>

      <%= form_with url: add_user_lakay_tag_path(@tag), method: :post, class: "space-y-3" do %>
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Search by name or email</label>
          <select name="user_id" class="w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white text-sm focus:outline-none focus:border-job-blue">
            <option value="">Select user...</option>
            <% User.where.not(id: @tag.user_ids).order(:lastname, :firstname).limit(200).each do |user| %>
              <option value="<%= user.id %>"><%= user.full_name %> (<%= user.email %>)</option>
            <% end %>
          </select>
        </div>
        <button type="submit" class="w-full bg-job-blue hover:bg-job-blue-dark text-white py-2 text-sm font-medium transition-colors">Add to Tag</button>
      <% end %>
    </div>
  </div>

  <div class="lg:col-span-3 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 p-6">
    <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Tagged Users (<%= @tag.users.count %>)</h2>

    <% if @users.any? %>
      <table class="w-full">
        <thead class="bg-gray-50 dark:bg-gray-800">
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Name</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Email</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Role</th>
            <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @users.each do |user| %>
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-800">
              <td class="px-4 py-2 text-sm">
                <% if user.job_seeker? %>
                  <%= link_to user.full_name, lakay_job_seeker_path(user), class: "text-job-blue hover:underline" %>
                <% else %>
                  <%= link_to user.full_name, lakay_employer_path(user), class: "text-job-blue hover:underline" %>
                <% end %>
              </td>
              <td class="px-4 py-2 text-sm text-gray-500 dark:text-gray-400"><%= user.email %></td>
              <td class="px-4 py-2 text-sm text-gray-500 dark:text-gray-400"><%= user.role.humanize %></td>
              <td class="px-4 py-2 text-right">
                <%= button_to t("actions.remove"), remove_user_lakay_tag_path(@tag, user_id: user.id), method: :delete, data: { turbo_confirm: "Remove #{user.full_name} from this tag?" }, class: "text-job-red hover:underline text-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="mt-4">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% else %>
      <p class="text-gray-500 dark:text-gray-400">No users tagged yet. Use the form on the left to add users.</p>
    <% end %>
  </div>
</div>
