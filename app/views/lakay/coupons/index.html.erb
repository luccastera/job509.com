<div class="flex justify-between items-center mb-8">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= t("admin.coupons") %></h1>
  <%= link_to "Add Coupon", new_lakay_coupon_path, class: "bg-job-blue hover:bg-job-blue-dark text-white px-4 py-2 transition-colors" %>
</div>

<div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800">
  <table class="w-full">
    <thead class="bg-gray-50 dark:bg-gray-800">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Code</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Value</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Comment</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Created By</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 dark:divide-gray-800">
      <% @coupons.each do |coupon| %>
        <tr>
          <td class="px-6 py-4 text-sm font-mono text-gray-900 dark:text-white"><%= coupon.code %></td>
          <td class="px-6 py-4 text-sm text-gray-900 dark:text-white"><%= number_to_currency(coupon.value) %></td>
          <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400"><%= truncate(coupon.comment, length: 50) %></td>
          <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400"><%= coupon.administrator&.name %></td>
          <td class="px-6 py-4 text-sm text-right space-x-4">
            <%= link_to "Edit", edit_lakay_coupon_path(coupon), class: "text-job-blue hover:underline" %>
            <%= button_to "Delete", lakay_coupon_path(coupon), method: :delete, class: "text-red-600 hover:underline", data: { turbo_confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
      <% if @coupons.empty? %>
        <tr>
          <td colspan="5" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">No coupons yet.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
