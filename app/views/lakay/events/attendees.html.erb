<div class="mb-6">
  <%= link_to "&larr; Back to #{@event.name}".html_safe, lakay_event_path(@event), class: "text-gray-500 hover:text-gray-900 dark:hover:text-white transition-colors" %>
</div>

<h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-8">
  Attendees for <%= @event.name %>
  <span class="text-gray-500 font-normal">(<%= @attendees.count %>)</span>
</h1>

<div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800">
  <table class="w-full">
    <thead class="bg-gray-50 dark:bg-gray-800">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Company</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Email</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Phone</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Paid</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 dark:divide-gray-800">
      <% @attendees.each do |attendee| %>
        <tr>
          <td class="px-6 py-4 text-sm text-gray-900 dark:text-white"><%= attendee.firstname %> <%= attendee.lastname %></td>
          <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400"><%= attendee.company %></td>
          <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400"><%= attendee.email %></td>
          <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400"><%= attendee.phone %></td>
          <td class="px-6 py-4 text-sm">
            <% if attendee.paid? %>
              <span class="text-green-600 dark:text-green-400">Yes</span>
            <% else %>
              <span class="text-gray-400">No</span>
            <% end %>
          </td>
        </tr>
      <% end %>
      <% if @attendees.empty? %>
        <tr>
          <td colspan="5" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">No attendees registered yet.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
