<div class="flex justify-between items-center mb-8">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-white"><%= t("admin.events") %></h1>
  <%= link_to "Add Event", new_lakay_event_path, class: "bg-job-blue hover:bg-job-blue-dark text-white px-4 py-2 transition-colors" %>
</div>

<div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800">
  <table class="w-full">
    <thead class="bg-gray-50 dark:bg-gray-800">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Date</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Location</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Attendees</th>
        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 dark:divide-gray-800">
      <% @events.each do |event| %>
        <tr>
          <td class="px-6 py-4 text-sm text-gray-900 dark:text-white">
            <%= link_to event.name, lakay_event_path(event), class: "hover:underline" %>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">
            <%= event.starts_at&.strftime("%b %d, %Y") %>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">
            <%= event.location %>
          </td>
          <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400">
            <%= link_to event.attendees.count, attendees_lakay_event_path(event), class: "text-job-blue hover:underline" %>
          </td>
          <td class="px-6 py-4 text-sm text-right space-x-4">
            <%= link_to "Edit", edit_lakay_event_path(event), class: "text-job-blue hover:underline" %>
            <%= button_to "Delete", lakay_event_path(event), method: :delete, class: "text-red-600 hover:underline", data: { turbo_confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
      <% if @events.empty? %>
        <tr>
          <td colspan="5" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">No events yet.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% if @pagy && @pagy.pages > 1 %>
  <div class="mt-6">
    <%== pagy_nav(@pagy) %>
  </div>
<% end %>
