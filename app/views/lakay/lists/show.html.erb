<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-white">List: <%= @list.name %></h1>
  <div class="space-x-2">
    <%= link_to t("actions.edit"), edit_lakay_list_path(@list), class: "bg-job-blue hover:bg-job-blue-dark text-white px-4 py-2 font-medium transition-colors" %>
    <%= link_to t("actions.back"), lakay_lists_path, class: "border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 px-4 py-2 hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors" %>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
  <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 p-6">
    <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Add User</h2>

    <%= form_with url: add_user_lakay_list_path(@list), method: :post, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :user_id, "Search User", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
        <%= f.collection_select :user_id, User.order(:lastname, :firstname).limit(100), :id, :full_name, { prompt: "Select a user..." }, class: "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:border-job-blue" %>
      </div>
      <%= f.submit "Add to List", class: "w-full bg-job-blue hover:bg-job-blue-dark text-white py-2 font-medium transition-colors cursor-pointer" %>
    <% end %>

    <div class="mt-6 pt-6 border-t border-gray-200 dark:border-gray-700">
      <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Export Emails</h3>
      <% emails = @list.users.pluck(:email).join(", ") %>
      <% if emails.present? %>
        <textarea readonly class="w-full h-24 px-3 py-2 text-xs border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-800 text-gray-900 dark:text-white"><%= emails %></textarea>
      <% else %>
        <p class="text-sm text-gray-500">No users in list.</p>
      <% end %>
    </div>
  </div>

  <div class="lg:col-span-3 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 p-6">
    <h2 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Users (<%= @list.users.count %>)</h2>

    <% if @users.any? %>
      <table class="w-full">
        <thead class="bg-gray-50 dark:bg-gray-800">
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Name</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Email</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Role</th>
            <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
          <% @users.each do |user| %>
            <tr>
              <td class="px-4 py-2 text-sm">
                <% if user.job_seeker? %>
                  <%= link_to user.full_name, lakay_job_seeker_path(user), class: "text-job-blue hover:underline" %>
                <% else %>
                  <%= link_to user.full_name, lakay_employer_path(user), class: "text-job-blue hover:underline" %>
                <% end %>
              </td>
              <td class="px-4 py-2 text-sm text-gray-500 dark:text-gray-400"><%= user.email %></td>
              <td class="px-4 py-2 text-sm text-gray-500 dark:text-gray-400"><%= user.role.humanize %></td>
              <td class="px-4 py-2 text-right">
                <%= button_to t("actions.remove"), remove_user_lakay_list_path(@list, user_id: user.id), method: :delete, data: { turbo_confirm: "Remove #{user.full_name} from this list?" }, class: "text-job-red hover:underline text-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div class="mt-4">
        <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
      </div>
    <% else %>
      <p class="text-gray-500 dark:text-gray-400">No users in this list.</p>
    <% end %>
  </div>
</div>
