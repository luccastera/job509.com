<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-800"><%= t("admin.jobs") %></h1>
  <div class="flex space-x-4">
    <%= link_to t("jobs.pending_approval"), approvals_lakay_jobs_path, class: "text-job-blue hover:underline" %>
  </div>
</div>

<%# Search and Filters %>
<div class="bg-white rounded-lg shadow p-4 mb-6">
  <%= form_with url: lakay_jobs_path, method: :get, class: "flex flex-wrap gap-4" do |f| %>
    <div class="flex-1 min-w-[200px]">
      <%= f.text_field :q, value: params[:q], placeholder: t("jobs.search_placeholder"), class: "w-full border-gray-300 rounded-lg shadow-sm focus:ring-job-blue focus:border-job-blue" %>
    </div>
    <div class="w-48">
      <%= f.select :sector_id, options_from_collection_for_select(Sector.alphabetical, :id, :name, params[:sector_id]), { include_blank: t("jobs.all_sectors") }, class: "w-full border-gray-300 rounded-lg shadow-sm" %>
    </div>
    <div class="w-48">
      <%= f.select :status, options_for_select([["All", ""], ["Approved", "approved"], ["Pending", "pending"], ["Expired", "expired"]], params[:status]), {}, class: "w-full border-gray-300 rounded-lg shadow-sm" %>
    </div>
    <%= f.submit t("actions.search"), class: "bg-job-blue hover:bg-job-blue-light text-white px-4 py-2 rounded-lg cursor-pointer" %>
  <% end %>
</div>

<%# Jobs Table %>
<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gray-50">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Company</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Posted By</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-200">
      <% @jobs.each do |job| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap">
            <%= link_to job.title, [:lakay, job], class: "text-job-blue hover:underline font-medium" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= job.company %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= job.user&.full_name || "N/A" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <% if job.expired? %>
              <span class="px-2 py-1 rounded text-xs bg-gray-100 text-gray-800">Expired</span>
            <% elsif job.approved? %>
              <span class="px-2 py-1 rounded text-xs bg-green-100 text-green-800">Approved</span>
            <% else %>
              <span class="px-2 py-1 rounded text-xs bg-yellow-100 text-yellow-800">Pending</span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <%= job.post_date&.strftime("%Y-%m-%d") %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
            <%= link_to t("actions.view"), [:lakay, job], class: "text-job-blue hover:underline" %>
            <%= link_to t("actions.edit"), edit_lakay_job_path(job), class: "text-gray-600 hover:underline" %>
            <% unless job.approved? %>
              <%= button_to t("admin.approve"), approve_lakay_job_path(job), method: :patch, class: "text-green-600 hover:underline" %>
            <% end %>
            <%= button_to t("actions.delete"), [:lakay, job], method: :delete, data: { turbo_confirm: t("helpers.confirm") }, class: "text-red-600 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @jobs.empty? %>
    <div class="p-8 text-center text-gray-500">
      No jobs found.
    </div>
  <% end %>
</div>

<%# Pagination %>
<div class="mt-6">
  <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>
