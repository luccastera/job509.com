<div class="flex justify-between items-center mb-6">
  <h1 class="text-2xl font-bold text-gray-800">Jobs Pending Approval</h1>
  <%= link_to t("actions.back"), lakay_jobs_path, class: "text-gray-600 hover:underline" %>
</div>

<% if @jobs.any? %>
  <div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Company</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Posted By</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @jobs.each do |job| %>
          <tr>
            <td class="px-6 py-4">
              <%= link_to job.title, [:lakay, job], class: "text-job-blue hover:underline font-medium" %>
              <p class="text-sm text-gray-500 mt-1"><%= truncate(job.description, length: 100) %></p>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= job.company %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <% if job.user %>
                <%= job.user.full_name %><br>
                <span class="text-xs"><%= job.user.email %></span>
              <% else %>
                N/A
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= time_ago_in_words(job.created_at) %> ago
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
              <%= button_to t("admin.approve"), approve_lakay_job_path(job), method: :patch, class: "bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded" %>
              <%= link_to t("actions.view"), [:lakay, job], class: "text-job-blue hover:underline" %>
              <%= button_to t("actions.delete"), [:lakay, job], method: :delete, data: { turbo_confirm: t("helpers.confirm") }, class: "text-red-600 hover:underline" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="bg-white rounded-lg shadow p-8 text-center">
    <p class="text-gray-500">No jobs pending approval.</p>
    <%= link_to "View all jobs", lakay_jobs_path, class: "text-job-blue hover:underline" %>
  </div>
<% end %>
