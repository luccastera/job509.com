<h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-8"><%= t("admin.statistics") %></h1>

<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
  <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 p-6">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Jobs by Sector</h2>
    <ul class="space-y-2">
      <% @jobs_by_sector.each do |sector_id, count| %>
        <li class="flex justify-between text-sm">
          <span class="text-gray-600 dark:text-gray-400"><%= Sector.find_by(id: sector_id)&.name || "Unknown" %></span>
          <span class="font-medium text-gray-900 dark:text-white"><%= count %></span>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 p-6">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Users by Role</h2>
    <ul class="space-y-2">
      <% @users_by_role.each do |role, count| %>
        <li class="flex justify-between text-sm">
          <span class="text-gray-600 dark:text-gray-400"><%= role.to_s.humanize %></span>
          <span class="font-medium text-gray-900 dark:text-white"><%= count %></span>
        </li>
      <% end %>
    </ul>
  </div>
</div>
