<h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-8"><%= t("admin.accounting") %></h1>

<div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 p-6 mb-8">
  <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Total Revenue</h2>
  <p class="text-3xl font-bold text-job-blue"><%= number_to_currency(@total_revenue || 0) %></p>
</div>

<div class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800">
  <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800">
    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Paid Jobs</h2>
  </div>
  <table class="w-full">
    <thead class="bg-gray-50 dark:bg-gray-800">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Job</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Company</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Amount</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Date</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200 dark:divide-gray-800">
      <% @paid_jobs.each do |job| %>
        <tr>
          <td class="px-6 py-4 text-sm text-gray-900 dark:text-white"><%= link_to job.title, lakay_job_path(job), class: "hover:underline" %></td>
          <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400"><%= job.company %></td>
          <td class="px-6 py-4 text-sm text-gray-900 dark:text-white"><%= number_to_currency(job.payment_amount) %></td>
          <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-400"><%= job.payment_date&.strftime("%Y-%m-%d") %></td>
        </tr>
      <% end %>
      <% if @paid_jobs.empty? %>
        <tr>
          <td colspan="4" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">No paid jobs yet.</td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
