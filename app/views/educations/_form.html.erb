<%= form_with model: [resume, education], class: "space-y-4", data: { turbo_frame: "_top" } do |f| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      <%= f.label :diploma, t("activerecord.attributes.education.diploma"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= f.text_field :diploma, class: "mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:border-job-blue" %>
    </div>

    <div>
      <%= f.label :school, t("activerecord.attributes.education.school"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= f.text_field :school, class: "mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:border-job-blue" %>
    </div>

    <div>
      <%= f.label :field_of_study, t("activerecord.attributes.education.field_of_study"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= f.text_field :field_of_study, class: "mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:border-job-blue" %>
    </div>

    <div>
      <%= f.label :graduation_year, t("activerecord.attributes.education.graduation_year"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
      <%= f.select :graduation_year, options_for_select((1970..Date.current.year + 5).to_a.reverse, education.graduation_year), { include_blank: t("helpers.select.prompt") }, class: "mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:border-job-blue" %>
    </div>
  </div>

  <div>
    <%= f.label :comments, t("activerecord.attributes.education.comments"), class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <%= f.text_area :comments, rows: 3, class: "mt-1 w-full px-3 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-800 text-gray-900 dark:text-white focus:outline-none focus:border-job-blue" %>
  </div>

  <div class="flex items-center space-x-2">
    <%= f.check_box :is_completed, class: "border-gray-300 dark:border-gray-600 text-job-blue focus:ring-job-blue" %>
    <%= f.label :is_completed, t("activerecord.attributes.education.is_completed"), class: "text-sm text-gray-700 dark:text-gray-300 cursor-pointer" %>
  </div>

  <div class="flex justify-end space-x-3 pt-4">
    <button type="button" data-action="click->modal#close" class="px-4 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
      <%= t("actions.cancel") %>
    </button>
    <%= f.submit t("actions.save"), class: "px-4 py-2 bg-job-blue hover:bg-job-blue-dark text-white font-medium transition-colors cursor-pointer" %>
  </div>
<% end %>
