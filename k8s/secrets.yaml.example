# Copy this file to secrets.yaml and fill in the values
# DO NOT commit secrets.yaml to git!
#
# To apply: kubectl apply -f k8s/secrets.yaml
#
# To generate base64 values:
#   echo -n "your-value" | base64
#
# Or create directly with kubectl:
#   kubectl create secret generic job509-secrets \
#     --from-literal=RAILS_MASTER_KEY=<value-from-config/master.key> \
#     --from-literal=POSTGRES_USER=job509 \
#     --from-literal=POSTGRES_PASSWORD=<secure-password> \
#     --from-literal=DATABASE_URL=postgres://job509:<password>@job509-postgres:5432/job509_production

apiVersion: v1
kind: Secret
metadata:
  name: job509-secrets
  namespace: default
  labels:
    app: job509
type: Opaque
stringData:
  # Rails master key (from config/master.key)
  RAILS_MASTER_KEY: "your-rails-master-key-here"

  # PostgreSQL credentials
  POSTGRES_USER: "job509"
  POSTGRES_PASSWORD: "change-this-to-a-secure-password"

  # Database URL for Rails (uses the k8s service name)
  DATABASE_URL: "postgres://job509:change-this-to-a-secure-password@job509-postgres:5432/job509_production"

  # Secret key base (generate with: bin/rails secret)
  SECRET_KEY_BASE: "generate-with-rails-secret-command"
